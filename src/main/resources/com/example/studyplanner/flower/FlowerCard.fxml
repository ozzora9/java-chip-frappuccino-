<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.studyplanner.controller.FlowerCardController"
      alignment="TOP_CENTER"
      spacing="24"
      style="-fx-background-color: transparent;">

    <!-- 카드 자체 -->
    <VBox style="-fx-background-color: #fffef8;
                  -fx-background-radius: 12;
                  -fx-padding: 28;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.2, 0, 3);"
          maxWidth="340"
          spacing="22"
          alignment="TOP_CENTER">

        <!-- 이미지 박스 -->
        <StackPane style="-fx-padding: 14;
                           -fx-background-color: white;
                           -fx-background-radius: 8;
                           -fx-border-color: #e0d8c8;
                           -fx-border-radius: 8;
                           -fx-border-width: 2;">
            <ImageView fx:id="flowerImage"
                       fitWidth="150"
                       preserveRatio="true" />
        </StackPane>

        <!-- 이름 + 의미 -->
        <VBox alignment="CENTER">
            <Label fx:id="flowerName"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4a3b32;" />
            <Label fx:id="flowerMeaning"
                   style="-fx-font-size: 16px; -fx-text-fill: #7b6855;"
                   wrapText="true"
                   maxWidth="240"/>
        </VBox>

        <!-- 성장 단계 -->
        <VBox spacing="8">
            <Label text="성장 단계"
                   style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #4a3b32;" />
            <HBox alignment="CENTER" spacing="16">
                <ImageView fx:id="seedStage" fitWidth="32" preserveRatio="true" />
                <ImageView fx:id="sproutStage" fitWidth="32" preserveRatio="true" />
                <ImageView fx:id="growStage" fitWidth="32" preserveRatio="true" />
                <ImageView fx:id="bloomStage" fitWidth="32" preserveRatio="true" />
            </HBox>
        </VBox>

    </VBox>

</VBox>
